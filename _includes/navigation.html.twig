<header class="site-header py-2 py-lg-3">
    <div class="container">
        <div class="row align-items-center flex-column flex-lg-row position-relative">
            <div class="col-lg-auto site-header__brand">
                <img src="{{ url('/assets/images/bzflag.svg') }}"
                     alt="BZFlag icon"
                >
                <span>BZFlag</span>
            </div>

            <div id="menu-toggle"
                    class="c-hamburger c-hamburger--htx"
                    aria-expanded="false"
                    aria-controls="navigation"
                    role="button"
            >
                <span></span>
                <p class="sr-only">toggle menu</p>
            </div>

            <nav class="col-lg site-navigation">
                <ul id="navigation" class="site-navigation__links">
                    {% for link in data.navigation.links %}
                        {%- set url = link.url[0] == '/' ? url(link.url) : link.url -%}
                        <li>
                            <a href="{{ url }}">
                                {{- link.name -}}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>
</header>
