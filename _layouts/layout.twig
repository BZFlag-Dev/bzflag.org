{% if title is not defined and this.title is defined %}{% set title = this.title %}{% endif %}
{% if sectiontitle is not defined and this.sectiontitle is defined %}{% set sectiontitle = this.sectiontitle %}{% endif %}
{% if metadescription is not defined and this.metadescription is defined %}{% set metadescription = this.metadescription %}{% endif %}
{% if section is not defined and this.section is defined %}{% set section = this.section %}{% endif %}
<!DOCTYPE html>
<html lang="en-us">
<head>
  <meta charset="utf-8" />
  <title>{% if title %}{{ title }} - {% endif %}{% if sectiontitle %}{{ sectiontitle }} - {% endif %}BZFlag</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
{% if metadescription %}
  <meta name="description" content="{{ metadescription|escape('html') }}" />
{% endif %}
  <link rel="stylesheet" href="/css/hljs.css" />
  <link rel="stylesheet" href="/css/style.css" />
{% block head %}{% endblock %}
</head>
<body>
  <div id="nav">
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/media/">Media</a></li>
      <li><a href="/downloads/">Downloads</a></li>
      <li><a href="/documentation/getting_started/">Getting Started</a></li>
      <li><a href="https://forums.bzflag.org/">Forums</a></li>
      <li><a href="/documentation/">Docs</a></li>
      <li><a href="/contribute/">Contribute</a></li>
      <li><a href="/help/">Help</a></li>
    </ul>
  </div>
{% block precontent %}{% endblock %}
  <div id="content"{% if section %} class="{{ section }}"{% endif %}>
    <div id="logo"></div>
    <h1>{{ title }}</h1>
{% block content %}{% endblock %}
  </div>
  <div id="footer">Copyright &copy; {{ "now"|date("Y") }} BZFlag &amp; Associates. [ <a href="/credits/">Credits</a> | <a href="/privacy/">Privacy Policy</a> ]</div>
{% block scripts %}{% endblock %}

{% if data.piwik %}

<!-- Piwik -->
<script type="text/javascript">
  var _paq = _paq || [];
  _paq.push(["setDocumentTitle", document.domain + "/" + document.title]);
  _paq.push(["setCookieDomain", "{{ data.piwik.cookieDomain }}"]);
  _paq.push(["setDomains", ["{{ data.piwik.domains|join("\", \"") }}"]]);
  _paq.push(["trackPageView"]);
  _paq.push(["enableLinkTracking"]);

  (function() {
    var u="{{ data.piwik.baseURL }}";
    _paq.push(["setTrackerUrl", u+"piwik.php"]);
    _paq.push(["setSiteId", "{{ data.piwik.siteID }}"]);
    var d=document, g=d.createElement("script"), s=d.getElementsByTagName("script")[0]; g.type="text/javascript";
    g.defer=true; g.async=true; g.src=u+"piwik.js"; s.parentNode.insertBefore(g,s);
  })();
</script>
<!-- End Piwik Code -->

{% endif %}

</body>
</html>
